{{#extends 'base'}}

{{#block 'content'}}
   <div class="row mt-5" id="productTable">
   <div class=" p-3 shadow-lg rounded-5 col-12 col-md-12 col-sm-12">
   <div class="d-flex justify-content-between mt-2">
    <h1 >Staff</h1> 
</div>
    <table class="table mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                {{!-- <th>Role</th> --}}
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.username}}</td>
                <td>{{this.email}}</td>
                <td>{{this.user}}</td>
                {{!-- <td>{{this.role}}</td> --}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
   </div>
   </div>
{{/block}}

{{/extends}}